<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background"
            android:padding="20dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Ubah Profile"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:textSize="18sp"></TextView>

                <ImageView
                    android:id="@+id/imageViewSave"
                    android:layout_marginLeft="285dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_save_black_24dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/dizzy">
                    </de.hdodenhof.circleimageview.CircleImageView>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linierHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"
                        android:text="AKUN">
                    </TextView>


                    <EditText
                        android:id="@+id/editNamaLengkap"
                        android:layout_width="300dp"
                        android:layout_height="56dp"
                        android:background="@drawable/edit_text_shape"
                        android:layout_marginTop="45dp"
                        android:padding="15dp"
                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_perm_identity_black_24dp"
                        android:fontFamily="sans-serif-light"
                        android:hint="Nama Lengkap"
                        android:textColor="#000000"
                        android:textSize="15sp"
                       />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linierBantuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="300dp"
                        android:layout_height="56dp"
                        android:background="@drawable/edit_text_shape"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_mail_black_24dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_mail_black_24dp"
                        android:padding="15dp"
                        android:fontFamily="sans-serif-light"
                        android:hint="Email"
                        android:textColor="#000000"
                        android:textSize="15sp"
                         />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linierFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="16dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="300dp"
                        android:layout_height="56dp"
                        android:background="@drawable/edit_text_shape"
                        android:drawableLeft="@drawable/ic_security_black_24dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_security_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif-light"
                        android:padding="15dp"
                        android:hint="Password"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linierPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/editTelepon"
                        android:layout_width="300dp"
                        android:layout_height="56dp"
                        android:background="@drawable/edit_text_shape"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif-light"
                        android:hint="Nomor Telepon"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_phone_black_24dp"
                        android:padding="16dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>