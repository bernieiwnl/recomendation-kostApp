<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:id="@+id/profile_image"
        android:src="@drawable/dizzy"
        android:layout_height="50dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/namaLengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image"
        android:layout_toEndOf="@id/profile_image"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Nama Lengkap"></TextView>


    <TextView
        android:id="@+id/unreadCount"
        android:layout_toRightOf="@+id/namaLengkap"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="8dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/circle_badge"/>

    <TextView
        android:id="@+id/pesanUser"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namaLengkap"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/profile_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/timeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/namaLengkap"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text=""
        ></TextView>

</RelativeLayout>